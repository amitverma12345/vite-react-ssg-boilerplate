{
  "name": "vite-react-ssg-boilerplate",
  "private": true,
  "version": "0.0.0",
  "description": "A modern, production-ready React boilerplate with Vite, SSR, SSG, and Supabase integration. Clone this repository to get started with all source files.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:client && npm run build:server && npm run build:prerender && npm run generate-sitemap",
    "build:client": "vite build",
    "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
    "build:prerender": "node scripts/prerender.js",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "generate-sitemap": "node scripts/generate-sitemap.cjs"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.7",
    "@tanstack/react-query": "^5.56.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-router-dom": "^6.26.2",
    "tailwind-merge": "^2.5.2"
  },
  "devDependencies": {
    "@eslint/config-array": "^0.20.0",
    "@eslint/object-schema": "^2.1.6",
    "@types/react": "^18.3.21",
    "@types/react-dom": "^18.3.7",
    "@types/react-helmet-async": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "glob": "^11.0.2",
    "postcss": "^8.5.3",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.11",
    "typescript": "^5.5.3",
    "vite": "^6.3.5"
  },
  "license": "MIT",
  "author": "amitverma12345 <amitverma082001@gmail.com>"
}
